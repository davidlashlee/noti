<!DOCTYPE html>
<html>
<head>
	<title>Noti</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<% if params[:controller].to_s == "lists"%>
	<%= render "elements/navbar" %>
	<% end %>

	<% unless params[:controller].to_s == "welcomes"%>
	<div class="container">
		<div class="row row-offcanvas row-offcanvas-left">
			<%= render 'elements/sidebar' %>

			<div class="col-xs-12 col-sm-10" style="margin-top: 42px; margin-bottom: 42px;">
	<% end%>
				<!-- content of page -->
				<%= yield %>
			</div><!-- /.col-xs-12 main -->
		</div><!--/.row-->
	</div><!--/.container-->


</body>
</html>
