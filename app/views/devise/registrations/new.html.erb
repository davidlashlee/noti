<body class="session_background">
<div class="container" >
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-8 round_corners" style="background-color: rgba(30,30,30,.05); border-style: solid; border-width: 1px; margin-top: 120px;" align="center">
			<h3 class="session_shadow">Welcome to Noti!</br>Sign Up</h3>

			<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>

			<div style="max-width: 300px;">
				<%= f.email_field :email, autofocus: true, placeholder: "Email" %>
			</div>

			<div style="max-width: 300px;"><% f.label :password %> <br />
				<%= f.password_field :password, autocomplete: "off", placeholder: "Password" %><% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
			</div>

			<div style="max-width: 300px;">
				<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
			</div>

			<div><%= f.submit "Sign up" %></div>
			</br>
			<% end %>

			<%= render "devise/shared/links" %>
			</br>
		</div>
	</div>
</div>
