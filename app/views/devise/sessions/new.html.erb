<body class="session_background">
<div class="container">
	<div class="row">
	</br></br></br></br>
		<div class="col-md-1"></div>
		<div class="col-md-10 round_corners session_style" align="center">
			<h2 class="session_shadow">Log in</h2>

			<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), class: "session_shadow") do |f| %>
			<div class="session_shadow" style="max-width: 300px;">
				<%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form_input" %>
			</div>

			<div class="session_shadow" style="max-width: 300px;">
				<%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form_input" %>
			</div>

				<% if devise_mapping.rememberable? -%>
					<div class="session_shadow">
						<%= f.check_box :remember_me %> <%= f.label :remember_me %>
					</div>
				<% end %>
					</br>
					<div>
						<%= f.submit "Log in" %>
					</div>
			<% end %>
			</br>
			</br>
			<div>
			<%= render "devise/shared/links" %>
			</div>
			
			</br>
			</br>
			</br>
		</div>
</div>
</div>
